# .env.development - Development defaults (SAFE TO COMMIT TO GIT)
# These are non-sensitive default values that work for most developers
# Developers can override these in their .env.local file

# =============================================================================
# API Configuration - Development Server
# =============================================================================
REACT_APP_API_URL=https://dev-api.mycompany.com/api
REACT_APP_API_VERSION=v1

# =============================================================================
# Application Settings
# =============================================================================
REACT_APP_APP_NAME=MyApp
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# =============================================================================
# Debug & Development Settings
# =============================================================================
NODE_ENV=development
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_DEBUG=true
REACT_APP_SHOW_DEV_TOOLS=true
REACT_APP_ENABLE_CONSOLE_LOGS=true

# =============================================================================
# Feature Flags - Development Defaults
# =============================================================================
REACT_APP_FEATURE_NEW_DASHBOARD=true
REACT_APP_FEATURE_PAYMENTS=false
REACT_APP_FEATURE_ANALYTICS=true
REACT_APP_FEATURE_NOTIFICATIONS=true

# =============================================================================
# Development Server Settings
# =============================================================================
PORT=3000
FAST_REFRESH=true
SKIP_PREFLIGHT_CHECK=true

# =============================================================================
# Mock/Test Settings
# =============================================================================
REACT_APP_ENABLE_MOCK_DATA=true
REACT_APP_MOCK_PAYMENTS=true
REACT_APP_MOCK_EXTERNAL_APIS=false

# =============================================================================
# Public Development URLs (non-sensitive)
# =============================================================================
REACT_APP_PUBLIC_URL=http://localhost:3000
REACT_APP_DOCS_URL=https://docs.mycompany.com
REACT_APP_SUPPORT_URL=https://support.mycompany.com