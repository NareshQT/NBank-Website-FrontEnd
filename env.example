# Environment Variables Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# Environment
NODE_ENV=development
PORT=5173

# Application
REACT_APP_NAME=nBank
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Your Financial Future Starts Here

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=10000

# Authentication
REACT_APP_JWT_SECRET=your-jwt-secret-key-here
REACT_APP_TOKEN_EXPIRY=24h

# Banking APIs
REACT_APP_AUTH_API=/auth
REACT_APP_ACCOUNTS_API=/accounts
REACT_APP_TRANSACTIONS_API=/transactions
REACT_APP_CARDS_API=/cards
REACT_APP_LOANS_API=/loans

# External Services
REACT_APP_SENTRY_DSN=
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_HOTJAR_ID=

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_TRACKING=false
REACT_APP_ENABLE_DEBUG_MODE=true

# Security
REACT_APP_ENABLE_2FA=false
REACT_APP_SESSION_TIMEOUT=1800000
